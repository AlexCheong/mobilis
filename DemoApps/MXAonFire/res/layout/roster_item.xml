<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:gravity="top" 
  android:layout_height="wrap_content"
   android:layout_width="fill_parent" android:orientation="horizontal"
   android:background="#FFFFFF"
   >
    <ImageView android:layout_width="wrap_content" 
    android:id="@+id/roster_item_image" 
    android:src="@drawable/icon" 
    android:layout_height="match_parent"></ImageView>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="match_parent" android:orientation="vertical" android:layout_weight="1"  android:layout_width="wrap_content">
        <TextView android:id="@+id/roster_item_name"  android:text="TextView" android:textColor="#000000" android:layout_height="40dip"
        	 android:layout_marginLeft="5dip"   android:layout_marginTop="20dip" 
        	 android:layout_weight="1"  android:gravity="center_vertical" android:layout_width="fill_parent"></TextView>
        <TextView android:text="TextView" android:id="@+id/roster_item_status" android:layout_width="fill_parent" android:layout_marginLeft="5dip"  
        	android:layout_height="20dip"
        	></TextView>
    </LinearLayout>
	 
    <QuickContactBadge android:id="@+id/roster_item_contact_badge" 
    android:layout_width="wrap_content" 
    android:layout_height="match_parent"></QuickContactBadge>
    
</LinearLayout>
