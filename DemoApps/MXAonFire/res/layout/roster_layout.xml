<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" 
    	android:id="@+id/linearLayout1" android:layout_weight="0"
    	android:background="#BBBBBB" android:baselineAligned="false">
        <ImageView  android:src="@drawable/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/roster_layout_status_icon" android:layout_gravity="center_vertical" android:layout_weight="0" android:layout_marginLeft="5dip" android:layout_marginTop="7dip" android:layout_marginBottom="5dip"></ImageView>
        <Spinner android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/roster_layout_spinner" android:layout_marginTop="10dip" android:layout_marginBottom="5dip"></Spinner>
    </LinearLayout>
    <ListView android:id="@+id/roster_layout_listview" android:layout_width="match_parent" android:layout_height="match_parent"></ListView>
    
</LinearLayout>
