<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#666666" android:orientation="vertical"
 >
  
    <TextView android:id="@+id/muc_room_headline" 
    android:text="Room"
    android:textAppearance="?android:attr/textAppearanceMedium"
	android:layout_width="fill_parent"
	 android:layout_margin="5dip" android:layout_height="wrap_content"
	  android:gravity="center_horizontal"></TextView>
    <ListView android:id="@+id/muc_room_list_view" 
    android:layout_width="match_parent" 
    android:layout_margin="5dip" android:layout_height="match_parent"
    android:background="#000000" android:layout_weight="1"></ListView>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:layout_height="wrap_content" android:id="@+id/muc_room_send_text" android:layout_weight="1" android:layout_width="wrap_content" android:layout_margin="5dip">
            <requestFocus></requestFocus>
        </EditText>
        <Button android:layout_height="wrap_content" android:text="Send" android:layout_width="wrap_content" android:id="@+id/muc_room_send_button" android:layout_margin="5dip"></Button>
    </LinearLayout>
    
</LinearLayout>
