<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:text="Information" android:id="@+id/file_transfer_info_tv" android:layout_width="match_parent" android:layout_height="wrap_content"></TextView>
    <TextView android:text="Progress:" android:id="@+id/file_transfer_progress_tv" android:layout_width="match_parent" android:layout_height="wrap_content"></TextView>
    <ProgressBar android:layout_height="wrap_content" android:id="@+id/file_transfer_progress_bar" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent"></ProgressBar>
    
</LinearLayout>
